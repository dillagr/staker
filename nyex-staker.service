[Unit]
Description=NYEX Staker Service
After=network.target


[Service]
User=nyex
Group=nyex

Type=forking
ExecStart=/usr/local/bin/nyeriumd -daemon

Restart=always
RestartSec=5
PrivateTmp=True
TimeoutStopSec=60s
TimeoutStartSec=60s
StartLimitInterval=120s
StartLimitBurst=15


[Install]
WantedBy=multi-user.target
